@{
    Layout = null;
}

@model List<int>

@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        @*<span class="left">@Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</span>*@
        <ul class="nav navbar-nav navbar-right">
            @*<li style="padding-top: 35px; color: grey">Hello @User.Identity.GetUserName()</li>*@
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            @*<li>@Html.ActionLink("Menu", "Index", "Menu")</li>*@
            <li class="dropdown">
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    Menu
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    @if (Model.Contains(0))
                    {
                        <li>@Html.ActionLink("Seasonal Menu", "Index", "Menu", new { menutype = 0 }, null)</li>
                    }
                    @if (Model.Contains(1))
                    {
                        <li>@Html.ActionLink("Themed Menu", "Index", "Menu", new { menutype = 1 }, null)</li>
                    }
                    @if (Model.Contains(2))
                    {
                        <li>@Html.ActionLink("Celebrity Chef", "Index", "Menu", new { menutype = 2 }, null)</li>
                    }
                    @if (Model.Contains(3))
                    {
                        <li>@Html.ActionLink("Degustation Menu", "Index", "Menu", new { menutype = 3 }, null)</li>
                    }
                    <li>@Html.ActionLink("Manage Menu", "Manage", "Menu")</li>
                </ul>
            </li>
            <li>@Html.ActionLink("Reservations", "Manage", "Reservation")</li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off @User.Identity.GetUserName()</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        @*<li>@Html.ActionLink("Menu", "Index", "Menu")</li>*@
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                Menu
                <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
                @if (Model.Contains(0))
                {
                    <li>@Html.ActionLink("Seasonal Menu", "Index", "Menu", new { menutype = 0 }, null)</li>
                }
                @if (Model.Contains(1))
                {
                    <li>@Html.ActionLink("Themed Menu", "Index", "Menu", new { menutype = 1 }, null)</li>
                }
                @if (Model.Contains(2))
                {
                    <li>@Html.ActionLink("Celebrity Chef", "Index", "Menu", new { menutype = 2 }, null)</li>
                }
                @if (Model.Contains(3))
                {
                    <li>@Html.ActionLink("Degustation Menu", "Index", "Menu", new { menutype = 3 }, null)</li>
                }
            </ul>
        </li>
        <li>@Html.ActionLink("Reservations", "Manage", "Reservation")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
