@model IEnumerable<LRezWebApp.Models.Menu>

@{
    ViewBag.Title = "Whats Cooking? " + ViewBag.MenuType;
}

<style>
    .carousel-inner > .item > img {
        /*height: 85vh;*/
        margin: 0 auto;
    }

    .carousel-control:focus {
        outline: none;
    }

</style>

<div style="height: 3em"></div>

